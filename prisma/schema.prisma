// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique
  fullname    String?
  username    String   @unique
  image       String
  email       String   @unique
  institution String
  bio         String?  @default("Simple is better than complex")
  password    String
  joined      DateTime @default(now())
  isAdmin     Boolean  @default(false)
  // gists       Gists[]
  // comments    Comments[]
}

model Gist {
  id         Int      @id @default(autoincrement())
  content    String
  datePosted DateTime @default(now())
  likes      Int      @default(0)
  // authorId   String
  // author     Students @relation(fields: [authorId], references: [id])
}

// likedBy: [Schema.Types.ObjectId],

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  datePosted DateTime @default(now())
  // authorId   String
  // author     Students @relation(fields: [authorId], references: [id])
}

model Institution {
  id           Int     @id @default(autoincrement())
  uuid         String
  name         String  @unique
  abbreviation String?
  contact      String? @unique
  email        String? @unique
  website      String? @unique
  logo         Bytes?
}
